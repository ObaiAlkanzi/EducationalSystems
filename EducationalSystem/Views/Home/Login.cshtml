@model LoginViewModel
<div class="row">
    <div class="col-lg-8 col-md-8">
        <center>
            <h4>Local Login</h4>
            <form>
                <input type="email" name="Email" class="form-control" placeholder="user Gmail" />
                <input type="password" name="Password" class="form-control" placeholder="user Password" />
                <input type="submit" name="userPassword" class="bn btn-primary" placeholder="user Password" />
            </form>
        </center>
    </div>
    <div class="col-lg-4 col-md-4">
        <center>
            @{
                if(Model.ExternalLogins.Count == 0){
                    <h4>No External Logins configured</h4>
                }else{
                    <form mrthod="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                        <div>
                            @foreach(var provider in Model.ExternalLogins){
                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Login using @provider.DisplayName">
                                @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                }
            }
        </center>
    </div>
</div>